<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OpenCartSuite" verbose="10" thread-count="5" parallel="tests">
    <listeners>
        <listener
                class-name="com.qa.opencart.listeners.ExtentReportListener"/>
    </listeners>
    <test name="Login Page Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest"/>
        </classes>
    </test>
    <test name="Accounts Page Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.qa.opencart.tests.AccountsPageTest"/>
        </classes>
    </test>
    <test name="Product Page Test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.qa.opencart.tests.ProductPageInfoTest"/>
        </classes>
    </test>
    <test name="Registration Page Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.qa.opencart.tests.RegPageTest"/>
        </classes>
    </test>
    <test name="Search Results Page Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.qa.opencart.tests.SearchResultsTest"/>
        </classes>
    </test>


</suite>